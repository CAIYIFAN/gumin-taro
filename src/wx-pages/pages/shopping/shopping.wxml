<view class="page">
 <view class="navigeterbar">
  <view class="bar_back" bindtap="backLastPage"></view>
  <view class="bar_title">
    选择门店
  </view>
 </view>
    <view class="page_hd">
      <view class="icon">
        <image src="/assets/images/local.png"></image>
      </view>
      <view class="shopname">
        <text>范家新村A区</text>
        <image src="/assets/images/arrow.png"></image>
      </view>
      <view class="search">
      <van-search 
      class="search_input"
      value="{{value}}" 
      
      shape="round"
      placeholder="搜索门店"
      bind:search="onSearch"
     
    /></view>

    </view>
    <view class="page_bd">
      <map id="myMap" latitude="{{latitude}}" longitude="{{longitude}}" show-location scale="14" markers="{{markers}}"  >
        
      </map>
      <view class="controlMap"><text>收起地图</text><view class="arrow"><image src="/assets/icons/up.png"></image></view></view>
    </view>
    <view class="page_ft">
      <scroll-view scroll-y="{{true}}" style="height: 50vh;" onScrollToUpper="upper" onScrollToLower="lower" onScroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
       <!-- <block wx:for="{{shop}}" wx:key="index"> -->
        
        <view class="shop {{activeNavIndex == index?'active':''}}" data-type="{{item.id}}" data-index="{{index}}" wx:for="{{shop}}" wx:key="index" bindtap="chooseShop" data-name="{{item.shopname}}" data-distance="{{item.distance}}">
          <view class="right">
            <view class="top">
              <view class="pic">
                <image src="/assets/images/shop.png"></image>
              </view>
              <view class="shop_name">
                <text>{{item.shopname}}</text>
              </view>
              <view class="state">
              <text>营业中</text>
              </view>
            </view>
            <view class="center">
              <view class="detailPic">
                <image src="/assets/images/local_small.png"></image>
              </view>
              <view class="detail">
                <text>{{item.address}}</text>
              </view>
            </view>
            <view class="bottom">
              <view class="timePic">
                <image src="/assets/images/clock.png"></image>
              </view>
              <view class="time">
              <text> {{item.time}}</text>
              </view>
            </view>
          </view>
          <view class="left">
            <view class="header">
              <text>距离{{item.distance}}</text>
            </view>
            <view class="body">
            <text>去下单</text>
            </view>
            <view class="footerPic">
              <view class="leftPic">
                <image src="/assets/images/phone.png"></image>
              </view>
              <view class="rightPic">
                <image src="/assets/images/detail.png"></image>
              </view>
            </view>
          </view>
        </view>
      
      <!-- </block> -->
      </scroll-view>
      
      
    </view>
    

</view>