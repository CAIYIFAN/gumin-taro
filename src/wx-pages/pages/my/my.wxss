.page {
  background: #f6f6f6;
  height: 110vh;
  display: flex;
  flex-direction: column;
}
.goodme_hd {
  height: 500rpx;
  width: 100%;
}
.goodme_hd image {
  height: 500rpx;
  width: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.con_border {
  height: 340rpx;
  width: 90%;
  border-radius: 10rpx;
  box-shadow:0 0 15rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  margin-top: -150rpx;
}
.userinfo{
  position: relative;
  height: 140rpx;
  width: 90%;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}
.user_mes {
  height: 200rpx;
  width: 300rpx;
  position: absolute;
  top: -40rpx;
  left: 0;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #333;
  padding-left: 0rpx;
  margin-top: -20rpx;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}
.con_funcs {
  display: flex;
  height: 200rpx;
  width: 90%;
  background-color: #fff;
}
.func {
  flex: 1;
  height: 200rpx;
}
.func_name {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.func_name image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 8rpx;
}
.func_name .title {
  /* letter-spacing: rpx; */
  font-size: 36rpx;
}
.desc {
  display: flex;
  align-items: center;
  justify-content: center;
}
.desc .title {
  font-size: 32rpx;
  /* letter-spacing: 2rpx; */
}
.data {
  font-weight: 700;
  font-size: 36rpx;
  color: rgb(212, 212, 32);
}
.activities {
  height: 180rpx;
  width: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
  box-shadow:0 0 15rpx rgba(0, 0, 0, 0.2);
}
.activitie {
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.activitie .title {
  font-size: 35rpx;
  margin-left: 40rpx;
  margin-bottom: 60rpx;
  display: inline;
}
.activitie .desc {
  font-size: 28rpx;
  display: inline;
  margin-left: 200rpx;
  color: rgba(0, 0, 0, 0.2);
}
.progress {
  width: 90%;
  margin-left: 5%;
}
.introduce {
  width: 90%;
  height: 180rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
  margin-bottom: 100rpx;
  box-shadow:0 0 15rpx rgba(0, 0, 0, 0.2);
}
.introduce .cell {
  padding-top: 10rpx;
  border-radius: 10rpx;
  height: 50rpx;
  width: 90%;
}