.hd, .hd_swiper{
  width: 100%;
  height: 550rpx;
}
.hd_swiper image {
  width: 100%;
  height: 550rpx;
}

.bd{
  position: relative;
  height: 1000rpx;
  width: 750rpx;
}
.bd_container{
  margin-top: -40rpx;
  height: 1000rpx;
  width: 730rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-left: 10rpx;
  margin-right: 10rpx;
  z-index: 2;
}
.con_order{
  display: flex;
  width: 95%;
  height: 300rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
  background:white;
}
.con_order image{
  width: 750rpx;
  height: 300rpx;
}
.con_activities{
  /* display: flex; */
  height: 240rpx;
  width: 95%;
  margin-top: 20rpx;
}
.activity_select{
  margin-right: 4%;
}
.activity_select, .activity_inform{
  height: 200rpx;
  width: 48%;
  display: inline-block;
  border-radius:10rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  background-color: #fff;
}
.activity_select image{
  height: 200rpx;
  width: 100%;
}
.activity_inform image{
  height: 200rpx;
  width: 100%;
}
.con_invite{
  width:95%;
}
.title {
  font-size: 30rpx;
  margin: 10rpx 0;
}
.con_invite image{
  width: 100%;
  height: 180rpx;
  margin-top: 10rpx;
}
.con_logo{
  display: flex; 
  height: 300rpx;
  align-items: center;
  width: 100%;
  justify-content: center;
}
.con_logo image{
  margin-top: 20rpx;
  height: 100rpx;
  width: 43%;
}
.title{
  font-weight: bold;
}
